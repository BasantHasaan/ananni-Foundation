 <%= form_for @carpetdata, :html => {:class => "form-horizontal center"} do |f| %>
  <% if @carpetdata.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@carpetdata.errors.count, "error") %> prohibited
        this showroom from being saved:
      </h2>
      <ul>
        <% @carpetdata.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-group">
        <%= f.label "العرض:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :width, class: "form-control" %>
        </div>
