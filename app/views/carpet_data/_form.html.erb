        <%= f.label "الطول:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :lenght, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "عدد العقد:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :knot, class: "form-control" %>
        </div>
      </div>
       <div class="form-group">
        <%= f.label  "كود:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :code, class: "form-control" %>
        </div>
      </div>
       <div class="form-group">
        <%= f.label "الاسم:", class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control" %>
