 <div class="page-header">
    <h1>بيانات السجاده</h1>

 
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1" class="center">العرض</th>
  <th colspan="1" class="center">الطول</th>
  <th colspan="1" class="center">عدد العقد</th>
  <th colspan="1" class="center">الكود</th>
  <th colspan="1" class="center">الاسم</th>
  <th colspan="1" class="center">التصميم الرئيسى</th>
  <th colspan="1" class="center">اسم الماده الخام</th>
  <th colspan="1" class="center">الكميه</th>
  <th colspan="1" class="center">عدد الصفوف</th>
  <th colspan="1" class="center">اجراء</th>
  <th></th>

</tr>
</thead>
<tbody>
    <% unless @carpetdatas.empty? %>
    <% @carpetdatas.each do |carpetdata| %>
      <tr> 
        <td><%= carpetdata.width %></td>
        <td><%= carpetdata.lenght %></td>
        <td><%= carpetdata.knot %></td>
        <td><%= carpetdata.code %></td>
        <td><%= carpetdata.name %></td>
        <td><%= carpetdata.main_model %></td>        
        <td><%= carpetdata.raw_material_name%></td>        
        <td><%= carpetdata.raw_material_quantity%></td> 
        <td><%= carpetdata.number_of_rows %></td>        
        <td><%= link_to 'تعديل السجاده', edit_carpet_datum_path(carpetdata) %>
        <%= link_to 'مسح السجاده', carpet_datum_path(carpetdata),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        </td>
        <td></td>
      </tr>
    <% end %>
    <% end %>

</tbody>
</table>
 <div class="contextual">
    <%= link_to(new_carpet_datum_path, class: "btn btn-success") do %>
      اضافه سجاده  <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
