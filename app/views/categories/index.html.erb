 <div class="page-header">
    <h1>الفئات</h1>

  <div class="contextual">
    <%= link_to(new_category_path, class: "btn btn-success") do %>
      اضافه فئه<i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1" class="center">اسم الفئه</th>
  <th colspan="1" class="action">Actions</th>
</tr>
</thead>
<tbody>
    <% unless @categorys.empty? %>
    <% @categorys.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'تعديل الفئه', edit_category_path(category) %>
        <%= link_to 'مسح الفئه', category_path(category),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

          <!-- This currently works but smells -->
        </td>
      </tr>
    <% end %>
    <% end %>

</tbody>
</table>
