 <div class="page-header">
    <h1>التصميمات الرئيسه</h1>

  <div class="contextual">
    <%= link_to(new_main_designe_path, class: "btn btn-success") do %>
      اضافه تصميم جديد <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1" class="center">كود التصميم</th>
  <th colspan="1" class="center">الاسم</th>
  <th colspan="1" class="center">الوصف</th>
  <th colspan="1" class="action">Actions</th>
</tr>
</thead>
<tbody>
    <% unless @maindesignes.empty? %>
    <% @maindesignes.each do |maindesign| %>
      <tr>
        <td><%= maindesign.design_code %></td>
        <td><%= maindesign.name %></td>
        <td><%= maindesign.description %></td>
        <td><%= link_to 'تعديل', edit_main_designe_path(maindesign) %>
        <%= link_to 'مسح', main_designe_path(maindesign),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

          <!-- This currently works but smells -->
        </td>
      </tr>
    <% end %>
    <% end %>

</tbody>
</table>
