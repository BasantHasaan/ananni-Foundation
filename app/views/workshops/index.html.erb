 <div class="page-header" dir="rtl">
    <h1>الورشه</h1>

  <div class="contextual">
    <%= link_to(new_workshop_path, class: "btn btn-success") do %>
      اضافه ورشه جديده<i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed" dir="rtl">
<thead>
<tr>
  <th colspan="1" class="center">اسم الورشه</th>
  <th colspan="1" class="center">المنطقه</th>
  <th colspan="1" class="action">Actions</th>
</tr>
</thead>
<tbody>
    <% unless @workshops.empty? %>
    <% @workshops.each do |workshop| %>
      <tr>
        <td><%= workshop.name %></td>
        <td><%= workshop.location %></td>        
        <td><%= link_to 'Edit', edit_workshop_path(workshop) %>
        <%= link_to 'Delete', workshop_path(workshop),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

          <!-- This currently works but smells -->
        </td>
      </tr>
    <% end %>
    <% end %>

</tbody>
</table>
