 <div class="page-header">
    <h1>الموردين</h1>

  <div class="contextual">
    <%= link_to(new_supplier_path, class: "btn btn-success") do %>
      اضافه مورد <i class="icon-plus icon-white"></i>
    <% end %>
  </div>
</div>

<table class="table table-striped table-bordered table-condensed">
<thead>
<tr>
  <th colspan="1" class="center">اسم المورد</th>
  <th colspan="1" class="center">العنوان</th>
  <th colspan="1" class="center">رقم التليفون</th>
  <th colspan="1" class="center">اسم المسئول</th>
  <th colspan="1" class="center">رقم تليفون المسئول</th>
  <th colspan="1" class="center">الفئه</th>
  <th colspan="1" class="action">Actions</th>
</tr>
</thead>
<tbody>
    <% unless @suppliers.empty? %>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.address%></td>
        <td><%= supplier.phone%></td>
        <td><%= supplier.person%></td>
        <td><%= supplier.person_phone %></td>
        <td><%= supplier.category %></td>        
        <td><%= link_to 'تعديل', edit_supplier_path(supplier) %>
        <%= link_to 'مسح', supplier_path(supplier),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>

          <!-- This currently works but smells -->
        </td>
      </tr>
    <% end %>
    <% end %>

</tbody>
</table>
